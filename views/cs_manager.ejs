<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui" />
		<title>cs_manager</title>
		<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
		<link rel="stylesheet" href="/stylesheets/ctbc.css">
		<link rel="stylesheet" href="/stylesheets/cs_manager.css">
		<link rel="stylesheet" href="/stylesheets/common.css">
		
	</head>
	<body>
	
		<!-- Left Hand Side-->
		<div id='cs_manager_list'>
			<div id="search_box_container">
				<button>O</button>
				<input type="text" placeholder="搜尋"/>
			</div>
			
			<% list_data.forEach(function (item) { %>
				<div class='list_element'>
					<div class="img" alt="">
						<img src="<%= item.avatar %>" alt="">
						<div class="title">
							<%= item.type %>/<%= item.vehicle_id %>/<%= item.name %>
						</div>
					</div>
					<div class="msg">
						<%= item.latest_msg[0].msg %>
					</div>
					<% if (item.unread) { %>
						<div class="unread">
							<%= item.unread %>
						</div>
					<% } %>
					<% if (item.note.length>0) { %>
						<div class="note" title=''>
							<div class="tooltip">重要提醒
								<span class="tooltiptext"><%= item.note.map(function(item){return item.msg;}) %></span>
							</div>
						</div>
					<% } %>
				</div>
			<% }); %>
		</div>
		
		<!-- Right Hand Side-->
		<div id='cs_manager_dialog'>
				<div id='console'>
				</div>
				<div>
					<input id='chat_text' />
					<button id='send_button'>送出</button>
					<button id='func_menu'>功能</button>
					<a id='emotionIcon' href='#' class='chatUi__iconEmoticon'></a>
				</div>
				<div>
					<div id='talk_tricks_container'></div>
				</div>
				<div>
					<div id='emoticon_container'></div>
				</div>
			
			<!-- Div After click "相機"-->
			<div id='video_container'>
				<video autoplay></video>
			</div>
			
			<!-- Menu After click "功能"-->
			<div id='func_list_containter'>
				<ul id ="func_list">
					<li><div>金牌話術</div></li>
					<li><div>訊息推播</div></li>
					<li><div>照片</div></li>
					<li><div>相機</div></li>
					<li><div>撥打</div></li>
					<li><div>出價</div></li>
					<li><div>車主資料</div></li>
					<li><div>常用訊息</div></li>
				</ul>
			</div>
		</div>
		
		<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
		<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
		
		<script src="/javascripts/cs_manager_preset.js"></script>
		<script src="/javascripts/cs_manager.js"></script>
		<script src="/javascripts/common.js"></script>
		
	</body>
</html>
